/**********************************************************
**COMMON ALL
**********************************************************/

*{
	font-family:
		"JetBrains Mono",  
		"Iosevka Nerd Font",
		sans-serif;
	font-size:10px;
}

/**********************************************************
**main bar
**********************************************************/

window#waybar{
	background:transparent;
}

/**********************************************************
**common for indvidual modules
**********************************************************/

#custom-power,
#backlight,
#battery,
#bluetooth,
#clock,
#cpu,
#disk,
#memory,
#disk,
#mpd,
#tray,
#pulseaudio,
#workspaces,
#temperature,
#idle_inhibitor,
#network{
	padding:0px;
	padding-left:5px;
	padding-right:5px;
	margin:0px;
	min-width:12px;
}

/**********************************************************
**individual modules stuff
**********************************************************/

#clock{
	min-width:105px;
}

#network{
	min-width: 110px;
}

#pulseaudio{
	min-width:40px;
}

/**********************************************************
**common for each of main modules
**********************************************************/

.modules-left,
.modules-right,
.modules-center{
	border-radius:10px;
	border: 1px solid black
}

/**********************************************************
**modules left, center right
**********************************************************/

.modules-left{
	background:
		linear-gradient(
			45deg,
			rgba(199,209,251,0.8) 0%, 
			rgba(178,213,247,0.8) 100%
		);
}

.modules-center{
	min-width:200px;
	background:
		linear-gradient(
			45deg,
			rgba(187,230,248,0.8) 0%, 
			rgba(191,239,250,0.8) 100%
		);
}

.modules-right{
	background:
		linear-gradient(
			45deg,
			rgba(194,246,251,0.8) 0%, 
			rgba(199,255,253,0.8) 100%
		);
}


/**********************************************************
**END
**********************************************************/
